<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:layout_width="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/appInfo_icon"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/appInfo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/appInfo_icon"
        android:layout_toStartOf="@+id/appInfo_enable"
        android:text="Name"/>

    <Button
        android:id="@+id/appInfo_enable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:text="@string/button_enable"/>

    <Button
        android:id="@+id/appInfo_configure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/appInfo_enable"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:visibility="gone"
        android:text="@string/button_configure"/>



</RelativeLayout>